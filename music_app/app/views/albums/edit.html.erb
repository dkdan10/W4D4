<h1>Edit Album</h1>

<form action="<%=album_url(@album.id)%>" method="POST">
  <input type="hidden" name="_method" value="PATCH">
  <%= auth_token %>
  <label>Title: <input type="text" name="album[title]" value="<%=@album.title%>"></label>
  <br>
  <label>Year: <input type="number" name="album[year]" min="1" max="2500" value="<%=@album.year%>"></label>
  <br>
  <label>
    Band: 
    <select name="album[band_id]" id="bands">
    <% Band.all.each do |band| %>
      <option
        <%= @album.band_id == band.id ? "selected" : "" %>
        value="<%= band.id %>">
        <%= band.name %>
      </option>
    <% end %>
  </select>
  </label>
  <br>
  <input
    type="radio"
    name="album[live]"
    value="false"
    id="studio_album"
    <%= @album[:live] == false ? "checked" : "" %>>
  <label for="cat_sex_male">Studio</label>
  <input
    type="radio"
    name="album[live]"
    value="true"
    id="live_album"
    <%= @album[:live] == true ? "checked" : "" %>>
  <label for="cat_sex_female">Live</label>
  <br>
  <input type="submit" value="Edit Album">
</form>