<!DOCTYPE html>
<html>
  <head>
    <title>MusicApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <h1 class="title_text">Welcome to this AMAZING Music App</h1>
    <p class="title_sub_text">Support our GoFundMe at: venmo[@dan_keinan]</p>
    <% if logged_in? %>
      <a href="<%=user_url(current_user)%>">Back to Profile</a>
      <form action="<%=sessions_url%>" method="POST" class="logout_form">
        <%= auth_token %>
        <input type="hidden" name="_method" value="DELETE">
        <input type="submit" value="Log Out">
      </form>

    <% else %>
      <div class="logup_nav">
        <a href="<%=new_sessions_url%>">Login</a>
        <a href="<%=new_user_url%>">Sign Up</a>
      </div>
    <% end %>

    
    <% if flash[:errors] %>
      <ul>
        <% flash[:errors].each do |error| %>
          <li><%=error%></li>
        <% end %>
      </ul>
    <% end %>
    
    
    <%= yield %>

  </body>
</html>
